@article{kwonExpandedHabitatModeling,
  title = {Expanded Habitat Modeling of a Critically Endangered New Species of Baleen Whale ({{Balaenoptera}} Ricei) with Historical Augmentation},
  author = {Kwon, David},
  abstract = {The Rice's whale Balaenoptera ricei is a newly described baleen whale on the brink of extinction that is endemic to the northern Gulf of Mexico (GoMx). Concrete understanding of its range of habitation is vital for supporting conservation efforts, but research in B. ricei's potential distribution outside American waters, suggested by historical records, is lacking. A maximum entropy algorithm was used to model habitat suitability of B. ricei in the entire GoMx, northern Caribbean, and northwestern Atlantic coastline. This was informed using ten environmental predictors, 50 historical records, and 181 extant records. Four habitat models were created that incorporated extant records alone (extant) or combined extant and historical records (augmented). The extant models recovered no suitable habitat in the southern GoMx or Caribbean, while the augmented model revealed high suitable habitat in the Bay of Campeche and Campeche Bank. Unexpectedly, both models also recovered suitable habitat in the northwestern Atlantic, where previous surveys found little evidence of B. ricei presence. This provides implications in the dwindling population's ecology that must be further investigated. In addition, this study's findings in the southern GoMx presents evidence that the species may still exist outside the northern GoMx.},
  langid = {english},
  file = {/Users/bbest/Zotero/storage/XZ2PTGKQ/Kwon - Expanded habitat modeling of a critically endanger.pdf}
}

