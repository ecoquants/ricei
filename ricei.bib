  shorttitle = {Semi-Quantitative Risk Assessment of Marine Mammal Oil Exposure},
  author = {{Ram{\'i}rez-Le{\'o}n}, M. Rafael and {Sosa-Nishizaki}, Oscar and {P{\'e}rez-Brunius}, Paula and {Romo-Curiel}, Alfonsina E. and {Ram{\'i}rez-Mendoza}, Zurisaday and {Fajardo-Yamamoto}, Arturo and Herzka, Sharon Z. and {Garc{\'i}a-Aguilar}, Mar{\'i}a C.},
